{
  "manifest_version": 3,
  "name": "JobKit",
  "version": "1.0",
  "description": "Store, manage, auto-upload, and track resumes and cover letters on job application sites like LinkedIn and Indeed.",
  "permissions": [
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/*",
        "*://*.indeed.com/*",
        "*://*.glassdoor.com/*",
        "*://*.monster.com/*",
        "*://*.ziprecruiter.com/*",
        "*://*.careerbuilder.com/*",
        "*://*.simplyhired.com/*",
        "*://*.naukri.com/*",
        "*://*.dice.com/*",
        "*://*.job.com/*",
        "*://*.snagajob.com/*",
        "*://*.usajobs.gov/*",
        "*://*.jobstreet.com/*",
        "*://*.jobsdb.com/*",
        "*://*.seek.com.au/*",
        "*://*.totaljobs.com/*",
        "*://*.reed.co.uk/*",
        "*://*.jobserve.com/*",
        "*://*.jobsite.co.uk/*",
        "*://*.workopolis.com/*",
        "*://*.eluta.ca/*",
        "*://*.jobbank.gc.ca/*"
      ],
      "js": ["content.js"]
    }
  ]
}
